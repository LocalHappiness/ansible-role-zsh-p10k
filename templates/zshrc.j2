_source_plugin() {
	plugin_installed=false
	plugin_name="$1"

	for basedir in /usr/share/zsh/plugins /usr/share
	do
		plugin="$basedir/$plugin_name/$plugin_name.zsh"
		[ -f "$plugin" ] \
			&& source "$plugin" \
			&& plugin_installed=true
	done

	[ $plugin_installed = false ] \
		&& echo -e "\033[33m[ ! ]\033[0m ZSH ${plugin_name#zsh-} not installed"
}

